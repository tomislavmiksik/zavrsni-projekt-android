<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZavrsniProjektMiksik" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F73859</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#303841</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#F73859</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ZavrsniProjektMiksik.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ZavrsniProjektMiksik.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZavrsniProjektMiksik.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>